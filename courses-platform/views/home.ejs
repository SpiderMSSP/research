<!-- Hero Section -->
<div class="relative overflow-hidden">
    <div class="max-w-4xl mx-auto text-center py-16">
        <h1 class="text-5xl font-extrabold text-white mb-6">
            Security Research
            <span class="text-green-500">Courses</span>
        </h1>
        <p class="text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
            Deep dive into Linux internals, loader/linker attacks, and advanced security research.
            Learn by understanding how systems really work.
        </p>
        <div class="flex justify-center space-x-4">
            <a href="/courses" class="bg-green-600 hover:bg-green-700 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
                Browse Courses
            </a>
            <% if (typeof currentUser === 'undefined' || !currentUser) { %>
                <a href="/register" class="bg-gray-700 hover:bg-gray-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
                    Get Started
                </a>
            <% } else { %>
                <a href="/dashboard" class="bg-gray-700 hover:bg-gray-600 text-white px-8 py-3 rounded-lg font-semibold transition-colors">
                    My Dashboard
                </a>
            <% } %>
        </div>
    </div>
</div>

<!-- Featured Courses -->
<section class="py-12">
    <h2 class="text-2xl font-bold text-white mb-8">Available Courses</h2>

    <% if (typeof courses !== 'undefined' && courses.length > 0) { %>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% courses.forEach(course => { %>
                <div class="bg-gray-800 rounded-xl overflow-hidden border border-gray-700 hover:border-green-600 transition-colors">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <span class="px-3 py-1 rounded-full text-xs font-medium
                                <%= course.difficulty === 'beginner' ? 'bg-green-900 text-green-300' :
                                   course.difficulty === 'intermediate' ? 'bg-yellow-900 text-yellow-300' :
                                   course.difficulty === 'advanced' ? 'bg-orange-900 text-orange-300' :
                                   'bg-red-900 text-red-300' %>">
                                <%= course.difficulty ? course.difficulty.charAt(0).toUpperCase() + course.difficulty.slice(1) : 'Intermediate' %>
                            </span>
                            <% if (course.chapters) { %>
                                <span class="text-gray-400 text-sm">
                                    <%= course.chapters.length %> chapters
                                </span>
                            <% } %>
                        </div>

                        <h3 class="text-xl font-bold text-white mb-2">
                            <a href="/courses/<%= course.slug %>" class="hover:text-green-400 transition-colors">
                                <%= course.title %>
                            </a>
                        </h3>

                        <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                            <%= course.shortDescription || course.description || 'No description available' %>
                        </p>

                        <a href="/courses/<%= course.slug %>" class="inline-flex items-center text-green-500 hover:text-green-400 font-medium text-sm">
                            Start Learning
                            <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="text-center py-12 bg-gray-800 rounded-xl">
            <svg class="mx-auto h-12 w-12 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <h3 class="mt-4 text-lg font-medium text-white">No courses yet</h3>
            <p class="mt-2 text-gray-400">Check back soon for new content!</p>
        </div>
    <% } %>
</section>

