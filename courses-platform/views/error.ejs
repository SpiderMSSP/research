<div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-6xl font-bold text-red-500 mb-4">
            <%= typeof error !== 'undefined' && error.status ? error.status : '500' %>
        </h1>
        <h2 class="text-2xl font-bold text-white mb-4">
            <%= typeof message !== 'undefined' ? message : 'Something went wrong' %>
        </h2>
        <p class="text-gray-400 mb-8">
            The page you're looking for doesn't exist or an error occurred.
        </p>
        <a href="/" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors">
            Back to Home
        </a>

        <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
            <pre class="mt-8 text-left bg-gray-800 p-4 rounded-lg overflow-x-auto text-xs text-red-400">
<%= error.stack %>
            </pre>
        <% } %>
    </div>
</div>
