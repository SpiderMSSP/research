<div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-8">Edit Course</h1>

    <form action="/courses/<%= course.slug %>?_method=PUT" method="POST" class="bg-gray-800 rounded-xl p-6 border border-gray-700 space-y-6">
        <div>
            <label for="title" class="block text-sm font-medium text-gray-300 mb-2">
                Course Title *
            </label>
            <input type="text" id="title" name="title" required
                   value="<%= course.title %>"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                          focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500">
        </div>

        <div>
            <label for="shortDescription" class="block text-sm font-medium text-gray-300 mb-2">
                Short Description
            </label>
            <input type="text" id="shortDescription" name="shortDescription" maxlength="500"
                   value="<%= course.shortDescription || '' %>"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                          focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500">
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-gray-300 mb-2">
                Full Description (Markdown)
            </label>
            <textarea id="description" name="description" rows="6"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                             focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"><%= course.description || '' %></textarea>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label for="difficulty" class="block text-sm font-medium text-gray-300 mb-2">
                    Difficulty Level
                </label>
                <select id="difficulty" name="difficulty"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                               focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500">
                    <option value="beginner" <%= course.difficulty === 'beginner' ? 'selected' : '' %>>Beginner</option>
                    <option value="intermediate" <%= course.difficulty === 'intermediate' ? 'selected' : '' %>>Intermediate</option>
                    <option value="advanced" <%= course.difficulty === 'advanced' ? 'selected' : '' %>>Advanced</option>
                    <option value="expert" <%= course.difficulty === 'expert' ? 'selected' : '' %>>Expert</option>
                </select>
            </div>

            <div>
                <label for="estimatedHours" class="block text-sm font-medium text-gray-300 mb-2">
                    Estimated Hours
                </label>
                <input type="number" id="estimatedHours" name="estimatedHours" min="1"
                       value="<%= course.estimatedHours || '' %>"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                              focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500">
            </div>
        </div>

        <div>
            <label for="tags" class="block text-sm font-medium text-gray-300 mb-2">
                Tags (comma-separated)
            </label>
            <input type="text" id="tags" name="tags"
                   value="<%= course.tags ? course.tags.join(', ') : '' %>"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                          focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500">
        </div>

        <div>
            <label for="prerequisites" class="block text-sm font-medium text-gray-300 mb-2">
                Prerequisites
            </label>
            <textarea id="prerequisites" name="prerequisites" rows="3"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                             focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"><%= course.prerequisites || '' %></textarea>
        </div>

        <div>
            <label for="objectives" class="block text-sm font-medium text-gray-300 mb-2">
                Learning Objectives (one per line)
            </label>
            <textarea id="objectives" name="objectives" rows="4"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                             focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"><%= course.objectives ? course.objectives.join('\n') : '' %></textarea>
        </div>

        <div class="flex items-center space-x-3">
            <input type="checkbox" id="isPublished" name="isPublished"
                   <%= course.isPublished ? 'checked' : '' %>
                   class="w-5 h-5 bg-gray-700 border-gray-600 rounded text-green-500 focus:ring-green-500">
            <label for="isPublished" class="text-gray-300">Published (visible to students)</label>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-700">
            <div class="flex items-center space-x-4">
                <a href="/courses/<%= course.slug %>" class="text-gray-400 hover:text-white">Cancel</a>
                <form action="/courses/<%= course.slug %>?_method=DELETE" method="POST" class="inline"
                      onsubmit="return confirm('Are you sure you want to delete this course?')">
                    <button type="submit" class="text-red-500 hover:text-red-400">Delete Course</button>
                </form>
            </div>
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold">
                Save Changes
            </button>
        </div>
    </form>
</div>
