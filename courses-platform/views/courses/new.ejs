<div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-8">Create New Course</h1>

    <form action="/courses" method="POST" class="bg-gray-800 rounded-xl p-6 border border-gray-700 space-y-6">
        <div>
            <label for="title" class="block text-sm font-medium text-gray-300 mb-2">
                Course Title *
            </label>
            <input type="text" id="title" name="title" required
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                          focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                   placeholder="e.g., Linux Loader & Linker Attacks">
        </div>

        <div>
            <label for="shortDescription" class="block text-sm font-medium text-gray-300 mb-2">
                Short Description
            </label>
            <input type="text" id="shortDescription" name="shortDescription" maxlength="500"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                          focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                   placeholder="Brief description for course cards">
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-gray-300 mb-2">
                Full Description (Markdown)
            </label>
            <textarea id="description" name="description" rows="6"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                             focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                      placeholder="Detailed course description..."></textarea>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label for="difficulty" class="block text-sm font-medium text-gray-300 mb-2">
                    Difficulty Level
                </label>
                <select id="difficulty" name="difficulty"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                               focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500">
                    <option value="beginner">Beginner</option>
                    <option value="intermediate" selected>Intermediate</option>
                    <option value="advanced">Advanced</option>
                    <option value="expert">Expert</option>
                </select>
            </div>

            <div>
                <label for="estimatedHours" class="block text-sm font-medium text-gray-300 mb-2">
                    Estimated Hours
                </label>
                <input type="number" id="estimatedHours" name="estimatedHours" min="1"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                              focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                       placeholder="e.g., 10">
            </div>
        </div>

        <div>
            <label for="tags" class="block text-sm font-medium text-gray-300 mb-2">
                Tags (comma-separated)
            </label>
            <input type="text" id="tags" name="tags"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                          focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                   placeholder="linux, security, elf, dynamic linking">
        </div>

        <div>
            <label for="prerequisites" class="block text-sm font-medium text-gray-300 mb-2">
                Prerequisites
            </label>
            <textarea id="prerequisites" name="prerequisites" rows="3"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                             focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                      placeholder="What should students know before taking this course?"></textarea>
        </div>

        <div>
            <label for="objectives" class="block text-sm font-medium text-gray-300 mb-2">
                Learning Objectives (one per line)
            </label>
            <textarea id="objectives" name="objectives" rows="4"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white
                             focus:outline-none focus:border-green-500 focus:ring-1 focus:ring-green-500"
                      placeholder="Understand ELF file structure
Master LD_PRELOAD techniques
Implement GOT/PLT hijacking"></textarea>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-700">
            <a href="/courses" class="text-gray-400 hover:text-white">Cancel</a>
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold">
                Create Course
            </button>
        </div>
    </form>
</div>
