<div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-2">Add Lab</h1>
    <p class="text-gray-400 mb-8">Chapter: <%= chapter.title %></p>

    <form action="/labs" method="POST" class="bg-gray-800 rounded-xl p-6 border border-gray-700 space-y-6">
        <input type="hidden" name="chapterId" value="<%= chapter.id %>">

        <div class="grid md:grid-cols-3 gap-6">
            <div class="md:col-span-2">
                <label for="title" class="block text-sm font-medium text-gray-300 mb-2">Lab Title *</label>
                <input type="text" id="title" name="title" required
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
            </div>
            <div>
                <label for="difficulty" class="block text-sm font-medium text-gray-300 mb-2">Difficulty</label>
                <select id="difficulty" name="difficulty"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
                    <option value="easy">Easy</option>
                    <option value="medium" selected>Medium</option>
                    <option value="hard">Hard</option>
                    <option value="expert">Expert</option>
                </select>
            </div>
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-gray-300 mb-2">Description</label>
            <textarea id="description" name="description" rows="2"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"></textarea>
        </div>

        <div>
            <label for="filesPath" class="block text-sm font-medium text-gray-300 mb-2">Lab Files Path</label>
            <input type="text" id="filesPath" name="filesPath"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"
                   placeholder="/home/spider/research/...">
        </div>

        <div>
            <label for="objectives" class="block text-sm font-medium text-gray-300 mb-2">Objectives (one per line)</label>
            <textarea id="objectives" name="objectives" rows="3"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"></textarea>
        </div>

        <div>
            <label for="tools" class="block text-sm font-medium text-gray-300 mb-2">Tools Required (comma-separated)</label>
            <input type="text" id="tools" name="tools"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"
                   placeholder="gcc, gdb, objdump">
        </div>

        <div>
            <label for="walkthrough" class="block text-sm font-medium text-gray-300 mb-2">Walkthrough (Markdown)</label>
            <textarea id="walkthrough" name="walkthrough" rows="10"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white font-mono text-sm focus:outline-none focus:border-green-500"
                      placeholder="## Step 1: Setup

Instructions...

## Step 2: Implementation

..."></textarea>
        </div>

        <div>
            <label for="hints" class="block text-sm font-medium text-gray-300 mb-2">Hints (separate with ---)</label>
            <textarea id="hints" name="hints" rows="6"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"
                      placeholder="First hint here
---
Second hint here
---
Third hint here"></textarea>
        </div>

        <div>
            <label for="solution" class="block text-sm font-medium text-gray-300 mb-2">Solution (Markdown, hidden by default)</label>
            <textarea id="solution" name="solution" rows="10"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white font-mono text-sm focus:outline-none focus:border-green-500"></textarea>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label for="orderIndex" class="block text-sm font-medium text-gray-300 mb-2">Order</label>
                <input type="number" id="orderIndex" name="orderIndex" value="<%= nextOrderIndex %>"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
            </div>
            <div>
                <label for="estimatedMinutes" class="block text-sm font-medium text-gray-300 mb-2">Est. Minutes</label>
                <input type="number" id="estimatedMinutes" name="estimatedMinutes"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
            </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-700">
            <a href="/chapters/<%= chapter.id %>" class="text-gray-400 hover:text-white">Cancel</a>
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold">
                Create Lab
            </button>
        </div>
    </form>
</div>
