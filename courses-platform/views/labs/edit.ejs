<div class="max-w-3xl mx-auto">
    <h1 class="text-3xl font-bold text-white mb-2">Edit Lab</h1>
    <p class="text-gray-400 mb-8">Chapter: <%= chapter.title %></p>

    <form action="/labs/<%= lab.id %>?_method=PUT" method="POST" class="bg-gray-800 rounded-xl p-6 border border-gray-700 space-y-6">
        <div class="grid md:grid-cols-3 gap-6">
            <div class="md:col-span-2">
                <label for="title" class="block text-sm font-medium text-gray-300 mb-2">Lab Title *</label>
                <input type="text" id="title" name="title" required value="<%= lab.title %>"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
            </div>
            <div>
                <label for="difficulty" class="block text-sm font-medium text-gray-300 mb-2">Difficulty</label>
                <select id="difficulty" name="difficulty"
                        class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
                    <option value="easy" <%= lab.difficulty === 'easy' ? 'selected' : '' %>>Easy</option>
                    <option value="medium" <%= lab.difficulty === 'medium' ? 'selected' : '' %>>Medium</option>
                    <option value="hard" <%= lab.difficulty === 'hard' ? 'selected' : '' %>>Hard</option>
                    <option value="expert" <%= lab.difficulty === 'expert' ? 'selected' : '' %>>Expert</option>
                </select>
            </div>
        </div>

        <div>
            <label for="description" class="block text-sm font-medium text-gray-300 mb-2">Description</label>
            <textarea id="description" name="description" rows="2"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"><%= lab.description || '' %></textarea>
        </div>

        <div>
            <label for="filesPath" class="block text-sm font-medium text-gray-300 mb-2">Lab Files Path</label>
            <input type="text" id="filesPath" name="filesPath" value="<%= lab.filesPath || '' %>"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
        </div>

        <div>
            <label for="objectives" class="block text-sm font-medium text-gray-300 mb-2">Objectives (one per line)</label>
            <textarea id="objectives" name="objectives" rows="3"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"><%= lab.objectives ? lab.objectives.join('\n') : '' %></textarea>
        </div>

        <div>
            <label for="tools" class="block text-sm font-medium text-gray-300 mb-2">Tools Required (comma-separated)</label>
            <input type="text" id="tools" name="tools" value="<%= lab.tools ? lab.tools.join(', ') : '' %>"
                   class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
        </div>

        <div>
            <label for="walkthrough" class="block text-sm font-medium text-gray-300 mb-2">Walkthrough (Markdown)</label>
            <textarea id="walkthrough" name="walkthrough" rows="10"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white font-mono text-sm focus:outline-none focus:border-green-500"><%= lab.walkthrough || '' %></textarea>
        </div>

        <div>
            <label for="hints" class="block text-sm font-medium text-gray-300 mb-2">Hints (separate with ---)</label>
            <textarea id="hints" name="hints" rows="6"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500"><%= lab.hints ? lab.hints.join('\n---\n') : '' %></textarea>
        </div>

        <div>
            <label for="solution" class="block text-sm font-medium text-gray-300 mb-2">Solution (Markdown)</label>
            <textarea id="solution" name="solution" rows="10"
                      class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white font-mono text-sm focus:outline-none focus:border-green-500"><%= lab.solution || '' %></textarea>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <label for="orderIndex" class="block text-sm font-medium text-gray-300 mb-2">Order</label>
                <input type="number" id="orderIndex" name="orderIndex" value="<%= lab.orderIndex %>"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
            </div>
            <div>
                <label for="estimatedMinutes" class="block text-sm font-medium text-gray-300 mb-2">Est. Minutes</label>
                <input type="number" id="estimatedMinutes" name="estimatedMinutes" value="<%= lab.estimatedMinutes || '' %>"
                       class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:border-green-500">
            </div>
        </div>

        <div class="flex items-center justify-between pt-4 border-t border-gray-700">
            <div class="flex items-center space-x-4">
                <a href="/labs/<%= lab.id %>" class="text-gray-400 hover:text-white">Cancel</a>
                <form action="/labs/<%= lab.id %>?_method=DELETE" method="POST" class="inline"
                      onsubmit="return confirm('Delete this lab?')">
                    <button type="submit" class="text-red-500 hover:text-red-400">Delete</button>
                </form>
            </div>
            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold">
                Save Changes
            </button>
        </div>
    </form>
</div>
