<aside class="w-64 bg-gray-800 border-r border-gray-700 min-h-screen">
    <div class="p-4">
        <!-- Course Title -->
        <% if (typeof course !== 'undefined' && course) { %>
            <a href="/courses/<%= course.slug %>" class="block">
                <h2 class="text-lg font-bold text-white hover:text-green-400 transition-colors">
                    <%= course.title %>
                </h2>
            </a>

            <% if (typeof courseProgress !== 'undefined') { %>
                <div class="mt-2">
                    <div class="flex justify-between text-xs text-gray-400 mb-1">
                        <span>Progress</span>
                        <span><%= courseProgress %>%</span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                        <div class="bg-green-500 h-2 rounded-full progress-bar" style="width: <%= courseProgress %>%"></div>
                    </div>
                </div>
            <% } %>
        <% } %>

        <!-- Chapter List -->
        <% if (typeof allChapters !== 'undefined' && allChapters) { %>
            <nav class="mt-6 space-y-2">
                <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Chapters</h3>

                <% allChapters.forEach((ch, index) => { %>
                    <% const isActive = typeof chapter !== 'undefined' && chapter && ch.id === chapter.id; %>
                    <% const progress = typeof progressMap !== 'undefined' && progressMap[`chapter_${ch.id}`]; %>

                    <a href="/chapters/<%= ch.id %>"
                       class="flex items-center px-3 py-2 rounded-lg transition-colors
                              <%= isActive ? 'bg-green-900 text-green-400 border-l-4 border-green-500' : 'text-gray-300 hover:bg-gray-700' %>">
                        <span class="flex-shrink-0 w-6 h-6 rounded-full flex items-center justify-center text-xs mr-3
                                    <%= progress && progress.status === 'completed' ? 'bg-green-600 text-white' :
                                       progress && progress.status === 'in_progress' ? 'bg-yellow-600 text-white' :
                                       'bg-gray-600 text-gray-300' %>">
                            <% if (progress && progress.status === 'completed') { %>
                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            <% } else { %>
                                <%= index + 1 %>
                            <% } %>
                        </span>
                        <span class="text-sm truncate"><%= ch.title %></span>
                    </a>
                <% }); %>
            </nav>
        <% } %>

        <!-- Lab List (if viewing a chapter) -->
        <% if (typeof chapter !== 'undefined' && chapter && chapter.labs && chapter.labs.length > 0) { %>
            <nav class="mt-6 space-y-2">
                <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Labs</h3>

                <% chapter.labs.forEach((lab, index) => { %>
                    <% const isActiveLab = typeof currentLab !== 'undefined' && currentLab && lab.id === currentLab.id; %>
                    <% const labProg = typeof labProgress !== 'undefined' && labProgress[lab.id]; %>

                    <a href="/labs/<%= lab.id %>"
                       class="flex items-center px-3 py-2 rounded-lg transition-colors ml-4
                              <%= isActiveLab ? 'bg-blue-900 text-blue-400' : 'text-gray-400 hover:bg-gray-700 hover:text-gray-200' %>">
                        <span class="flex-shrink-0 w-5 h-5 rounded flex items-center justify-center text-xs mr-2
                                    <%= labProg && labProg.status === 'completed' ? 'bg-green-600 text-white' :
                                       labProg && labProg.status === 'in_progress' ? 'bg-yellow-600 text-white' :
                                       'bg-gray-700 text-gray-400' %>">
                            <% if (labProg && labProg.status === 'completed') { %>
                                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            <% } else { %>
                                <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            <% } %>
                        </span>
                        <span class="text-xs truncate"><%= lab.title %></span>
                    </a>
                <% }); %>
            </nav>
        <% } %>
    </div>
</aside>
